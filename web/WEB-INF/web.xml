<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>Obvil</display-name>
  <description>Corpus explorer</description>
  <servlet>
    <servlet-name>obvil</servlet-name>
    <servlet-class>alix.web.Obvil</servlet-class>
  </servlet>
  <!-- Override default servlet, limit to static resources -->
  <servlet-mapping>
     <servlet-name>default</servlet-name>
     <url-pattern>/static/*</url-pattern>
  </servlet-mapping>
  <!--  override default jsp, limit to a folder -->
  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>/jsp/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>obvil</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
